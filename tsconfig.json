{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist/"
  },
  "include": ["src/"]
}
